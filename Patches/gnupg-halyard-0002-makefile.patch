Subject: [PATCH] .

---
 common/Makefile.in | 4 ++--
 g10/Makefile.in    | 2 +-
 tools/Makefile.in  | 2 +-
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/common/Makefile.in b/common/Makefile.in
index 4ecc52e..a29a53a 100644
--- a/common/Makefile.in
+++ b/common/Makefile.in
@@ -756,7 +756,7 @@ module_tests = t-convert t-percent t-gettime t-sysutils t-sexputil \
 t_common_cflags = $(KSBA_CFLAGS) $(LIBGCRYPT_CFLAGS) \
                   $(LIBASSUAN_CFLAGS) $(GPG_ERROR_CFLAGS)
 
-t_common_ldadd = libcommon.a \
+t_common_ldadd = libcommon.a libcommon_a-init.o \
                  $(LIBGCRYPT_LIBS) $(LIBASSUAN_LIBS) $(GPG_ERROR_LIBS) \
 	         $(LIBINTL) $(LIBICONV)
 
@@ -787,7 +787,7 @@ t_zb32_LDADD = $(t_common_ldadd)
 
 # http tests
 t_http_SOURCES = t-http.c
-t_http_CFLAGS = $(t_common_cflags) $(NTBTLS_CFLAGS) $(LIBGNUTLS_CFLAGS)
+t_http_CFLAGS = $(AM_CFLAGS) $(t_common_cflags) $(NTBTLS_CFLAGS) $(LIBGNUTLS_CFLAGS)
 t_http_LDADD = libcommontls.a $(t_common_ldadd) \
 	         $(NTBTLS_LIBS) $(LIBGNUTLS_LIBS) $(DNSLIBS)
 
diff --git a/tools/Makefile.in b/tools/Makefile.in
index b9f60b0..4ea44b3 100644
--- a/tools/Makefile.in
+++ b/tools/Makefile.in
@@ -541,7 +541,7 @@
 
 # NB: AM_CFLAGS may also be used by tools running on the build
 # platform to create source files.
-AM_CPPFLAGS = -I$(top_srcdir)/common -DLOCALEDIR=\"$(localedir)\" \
+AM_CPPFLAGS = $(AM_CFLAGS) -I$(top_srcdir)/common -DLOCALEDIR=\"$(localedir)\" \
 	$(am__append_1) $(am__append_2) $(am__append_3) \
 	$(am__append_4) $(am__append_5) $(am__append_6) \
 	$(am__append_7)
